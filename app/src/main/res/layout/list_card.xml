<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:layout_below="@+id/et_phone"
        android:layout_alignParentRight="true"
        android:layout_marginVertical="5dp"
        android:textColor="#313d94"
        android:text="Email: "/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phone"
        android:textColor="#313d94"
        android:layout_alignParentRight="true"
        android:layout_marginVertical="5dp"
        android:text="Phone: "/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_phone"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/phone"
        android:layout_marginVertical="5dp"
        android:text="9472987177"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_email"
        android:layout_below="@+id/email"
        android:layout_marginVertical="5dp"
        android:layout_alignParentRight="true"
        android:text="abc@gmail.com "/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registration"
        android:layout_marginVertical="5dp"
        android:textColor="#313d94"
        android:layout_below="@+id/et_phone"
        android:text="Registration: "/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_registration"
        android:layout_marginVertical="5dp"
        android:layout_below="@+id/registration"
        android:text="BR-01AT-1718"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:layout_marginVertical="5dp"
        android:textColor="#313d94"

        android:text="Name: "/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_name"
        android:layout_marginVertical="5dp"
        android:layout_below="@+id/name"
        android:text="Durgesh Nandan "/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginVertical="5dp"
        android:layout_below="@+id/et_registration"
        android:background="#22000000"
        />




</RelativeLayout>