<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_phone"
        android:layout_below="@+id/phone"
        android:layout_alignParentRight="true"
        android:layout_marginVertical="5dp"

        android:text="9472987177 "/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phone"
        android:textColor="#313d94"
        android:layout_alignParentRight="true"
        android:layout_marginVertical="5dp"
        android:text="Phone: "/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_total"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/total"
        android:layout_marginVertical="5dp"
        android:text="2500.25"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/total"
        android:layout_below="@+id/et_phone"
        android:layout_marginVertical="5dp"
        android:layout_alignParentRight="true"
        android:textColor="#313d94"
        android:text="Total: "/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:layout_marginVertical="5dp"
        android:textColor="#313d94"

        android:text="Name: "/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_username"
        android:layout_marginVertical="5dp"
        android:layout_below="@+id/username"
        android:text="Durgesh Nandan"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/jcid"
        android:layout_marginVertical="5dp"
        android:layout_below="@+id/et_username"
        android:textColor="#313d94"

        android:text="Jobcard ID: "/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_jcid"
        android:layout_marginVertical="5dp"
        android:layout_below="@+id/jcid"
        android:text="AB123"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginVertical="5dp"
        android:layout_below="@+id/et_registration"
        android:background="#22000000"
        />


</RelativeLayout>